@model IEnumerable<BellaSalon.Models.ServiceProvider>

@{
    ViewData["Title"] = "Service Providers";
}

<h2 style="font-family: 'Brush Script MT'; font-size: xx-large; color: midnightblue">Service Providers</h2>
<style>

    html {
        background-image: url('/images/spa4.jpg');
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        height: 50%;
    }

    footer {
        position: fixed;
        bottom: 0;
    }
</style>

<p>
    <a asp-action="ServiceProviderCreate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Details", "AppointmentsByDate", new { name=item.Name }) |
                @Html.ActionLink("Delete", "ServiceProviderDelete", new { ID=item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
