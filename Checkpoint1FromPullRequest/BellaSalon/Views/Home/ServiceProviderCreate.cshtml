@model BellaSalon.Models.ServiceProvider

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<style>

    html {
        background-image: url('/images/spa4.jpg');
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        height: 50%;
    }

    footer {
        position: fixed;
        bottom: 0;
    }
</style>

<h4 style="font-family: 'Brush Script MT'; font-size: xx-large; color: midnightblue">ServiceProvider</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ServiceProviderCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" pattern="[a-zA-Z ]{2,20}" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ServiceProviderIndex">Back to List</a>
</div>

