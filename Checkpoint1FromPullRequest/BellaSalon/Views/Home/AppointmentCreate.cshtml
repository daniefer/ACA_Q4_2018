@model BellaSalon.Models.Appointment

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4 style="font-family: 'Brush Script MT'; font-size: xx-large; color: darkgreen">Appointment</h4>
<hr />
<style>

    html {
        background-image: url('/images/spa2.jpg');
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        margin-top: 40px;
        height: 50%;
    }

    footer {
        position: fixed;
        bottom: 0;
    }
</style>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AppointmentCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customer" class="control-label"></label>
                <input asp-for="Customer" class="form-control" pattern="[a-zA-Z ]{2,20}" required />
                <span asp-validation-for="Customer" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ServiceProvider" class="control-label"></label>
                <input asp-for="ServiceProvider" class="form-control" pattern="[a-zA-Z ]{2,20}" required />
                <span asp-validation-for="ServiceProvider" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" type="date" class="control-label"></label>
                <input asp-for="Date" type="date" class="form-control" required />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time" type="time" class="control-label"></label>
                <input asp-for="Time" type="time" class="form-control" required />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AppointmentIndex">Back to List</a>
</div>

