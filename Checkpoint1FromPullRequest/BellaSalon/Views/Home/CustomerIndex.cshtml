@model IEnumerable<BellaSalon.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<h2 style="font-family: 'Brush Script MT'; font-size: xx-large; color: maroon">Customers</h2>
<style>

    html {
        background-image: url('/images/spa1.jpg');
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        margin-top: 40px;
        height: 50%;
    }

    footer {
        position: fixed;
        bottom: 0;
    }
</style>

<p>
    <a asp-action="CustomerCreate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Delete", "CustomerDelete", new { ID = item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
